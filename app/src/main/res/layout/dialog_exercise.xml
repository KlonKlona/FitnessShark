<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        style="@style/AppTheme.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/filter_add_exercise" />

    <EditText
        android:id="@+id/exercise_form_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/hint_exercise_name" />

    <EditText
        android:id="@+id/exercise_form_desription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/hint_description" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/exercise_category"
        style="@style/AppTheme.Subheader"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="10dp" />

    <Spinner
        android:id="@+id/exercise_spinner_category"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:entries="@array/exercisecategorylist"
        android:prompt="@string/exercise_category">
    </Spinner>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/exercise_equipment"
        style="@style/AppTheme.Subheader"
        android:layout_marginBottom="10dp" />

    <Spinner
        android:id="@+id/exercise_spinner_equipment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:entries="@array/exerciseequipmentlist"
        android:prompt="@string/exercise_equipment">
    </Spinner>

    <EditText
        android:id="@+id/exercise_form_sets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:hint="@string/hint_exercise_sets" />

    <EditText
        android:id="@+id/exercise_form_reps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:hint="@string/hint_exercise_reps" />

    <EditText
        android:id="@+id/exercise_form_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:hint="@string/hint_exercise_weight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/exercise_form_cancel"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="@color/greySecondary"
            android:theme="@style/ThemeOverlay.FilterButton" />


        <Button
            android:id="@+id/exercise_form_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/submit"
            android:theme="@style/ThemeOverlay.FilterButton" />

    </LinearLayout>

</LinearLayout>
